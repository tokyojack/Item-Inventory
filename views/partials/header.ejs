<!DOCTYPE html>
<head>
  
 <link rel="stylesheet" href="/css/index.css">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/search.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/menu.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/input.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/button.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/grid.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/item.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/container.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/header.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/segment.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/icon.min.css">
   
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/transition.min.css">
   <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/form.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/search.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/transition.min.js"></script>
   
   <title>Inventory</title>
   <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
   <div class="ui fixed inverted stackable main menu">
      <div class="ui container">
         
         <div class="header item" ><i id="fileIcon" class="folder outline icon"></i></div>
         <a href="/" class="item" id="home">Home</a>
         
         <div class="item">
            <form onSubmit="return redirectSearch();">
               <div class="ui search">
                  <div class="ui icon input">
                     <input id="search" class="prompt" type="text"  name="name" placeholder="Search Inventory">
                     <i class="search icon"></i>
                  </div>
                  <div class="results"></div>
               </div>
            </form>
         </div>
         
         <div class="item">
            <form action="/" method="POST">
               <div class="ui input focus">
                  <input type="text" id="name" name="name" placeholder="name">
               </div>
               <div class="ui input focus margin_left">
                  <input type="number" id="amount" name="amount" placeholder="amount">
               </div>
               <div class="margin_left">
                  <button class="ui primary button" id="submit_button">submit</button>
               </div>
            </form>
         </div>
         
      </div>
   </div>
   <div id="container" class="ui container">
      
   <% if(error && error.length >= 1){ %>
   <div class="alert alert-danger noBorder" role="alert">
      <%= error %>
   </div>
   <% } %>
   
   <% if(success && success.length >= 1){ %>
   <div class="alert alert-success noBorder" role="alert">
      <%= success %>
   </div>
   <% } %>